{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Thumbnail Maker",
  "version": "1.1.0",
  "identifier": "cn.wangyuchen.video-thumbnail-maker.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "视频缩略图生成器",
        "width": 800,
        "height": 900
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "main-capability"
      ]
    }
  },
  "plugins": {
    "shell": {
      "execute": true,
      "scope": [
        "which",
        "where"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}